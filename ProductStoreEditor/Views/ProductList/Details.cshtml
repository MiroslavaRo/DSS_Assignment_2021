@model ProductStoreEditor.Models.Product

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Details</h1>

<div>
    <h4>Product</h4>
    <hr />
    <dl class="row">

        <dt class="col-sm-2">
           Product
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ProductName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Supplier)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Supplier.Company)
            <!--asp-for="ProductToBeEdited.SupplierId" class="form-control" asp-items="Model.Suppliers"></select>-->
        </dd>
        <dd class="col-sm-10">
            @if (Model.PhotoFileName != null)
            {
                <img src="Images/Get?productId=@Model.ProductId&fileName=@Model.PhotoFileName" alt="@Model.ProductName" width="150" height="150" />
            }
            else
            {
                <img src="/images/notfound.png" alt="image not found" width="50" height="50">
            }
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.ProductId">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
