@model ProductMarketEditor.Models.Product

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Details</h1>

<div>
    <h4>Product</h4>
    <hr />
    <dl class="row">

        <dt class="col-sm-2">
            Product
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ProductName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Supplier)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Supplier.Company)
        </dd>
        <dt class="col-sm-2">
            Created By
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ProductChange.CreatedBy)
        </dd>
        <dt class="col-sm-2">
            Created On
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ProductChange.CreatedOn)
        <dt class="col-sm-2">
            Edited By
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ProductChange.EditedBy)
        </dd>
        <dt class="col-sm-2">
            Edited On
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ProductChange.EditedOn)
        </dd>
        <dd class="col-sm-10">
            @if (Model.ImageFileName != null)
            {
                <img src="~/Images/ProductPhotos/@Model.ProductId.ToString()/@Model.ImageFileName" alt="@Model.ImageFileName" width="250" height="250" />
            }
            else
            {
                <img src="/Images/NotFound.png" alt="image not found" width="50" height="50">
            }
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.ProductId">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
