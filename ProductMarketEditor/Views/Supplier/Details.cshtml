@model ProductMarketEditor.Models.Supplier

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Details</h1>

<div>
    <h4>Supplier</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Company)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Company)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ProductType)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ProductType.ProductTypeName)
        </dd>
        <dt class="col-sm-2">
            Created By
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.SupplierChange.CreatedBy)
        </dd>
        <dt class="col-sm-2">
            Created On
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.SupplierChange.CreatedOn)
        <dt class="col-sm-2">
            Edited By
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.SupplierChange.EditedBy)
        </dd>
        <dt class="col-sm-2">
            Edited On
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.SupplierChange.EditedOn)
        </dd>
        <dd class="col-sm-10">
            @if (Model.ImageFile!= null)
            {
                <img src="~/Images/SupplierLogo/@Model.SupplierId.ToString()/@Model.ImageFile" alt="@Model.ImageFile" width="250" height="250" />
            }
            else
            {
                <img src="/Images/NotFound.png" alt="image not found" width="50" height="50">
            }
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.SupplierId">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
