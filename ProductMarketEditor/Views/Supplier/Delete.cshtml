@model DeleteSupplierViewModel

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Supplier</h4>
    <hr />
    @if (Model.ErrorMessageVisible)
    {
        <div class="alert alert-danger" role="alert">
            Supplier can not be deleted
        </div>
    }
    <dl class="row">

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.SupplierToBeDeleted.Company)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.SupplierToBeDeleted.Company)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.SupplierToBeDeleted.ProductType)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.SupplierToBeDeleted.ProductType.ProductTypeName)
        </dd>
        <dd class="col-sm-10">
            @if (Model.SupplierToBeDeleted.ImageFile == null)
            {
                <img src="/Images/NotFound.png" alt="image not found" width="50" height="50">
            }
            else
            {
                <img src="~/Images/SupplierLogo/@Model.SupplierToBeDeleted.SupplierId.ToString()/@Model.SupplierToBeDeleted.ImageFile" width="250" height="250" />
            }
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="SupplierToBeDeleted.SupplierId" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>
